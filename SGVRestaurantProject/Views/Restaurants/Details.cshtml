@model SGVRestaurantProject.Models.CompleteRestaurantDetails

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.theRestaurant.RestaurantName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.theRestaurant.RestaurantAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.theRestaurant.RestaurantName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.theRestaurant.RestaurantName)
        </dd>
    </dl>
</div>


<div>
<ul>
    
    @foreach (var restaurantBanquetMenu in Model.banquets)
        {
            <li>@restaurantBanquetMenu.Banquet.BanquetName</li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.theRestaurant.RestaurantId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
