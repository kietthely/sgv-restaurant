@model SGVRestaurantProject.Models.Restaurant

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1 id="createRestaurantH1">Add a restaurant</h1>

        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RestaurantName" class="control-label">Restaurant Name</label>
                <input asp-for="RestaurantName" class="form-control" />
                <span asp-validation-for="RestaurantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantAddress" class="control-label">Restaurant Address</label>
                <input asp-for="RestaurantAddress" class="form-control" />
                <span asp-validation-for="RestaurantAddress" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input class="btn" type="submit" value="Create" />
                <a class="btn" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
