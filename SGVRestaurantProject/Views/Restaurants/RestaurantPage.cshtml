@model IEnumerable<SGVRestaurantProject.Models.Restaurant>

@{
    ViewData["Title"] = "Restaurant Page";
}


<div class="text-center">
    <h2>SGV RESTAURANTS</h2>
</div>
<br />

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col text-center">
        <div id="cards" class="card">
            <img src="~/Photos/louis-hansel-U6-KvV7HlMk-unsplash.jpg" style="height: 300px" class="card-img-top" alt="...">
