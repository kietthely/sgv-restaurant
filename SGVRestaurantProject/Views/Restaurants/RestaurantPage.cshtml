                <a asp-controller="Restaurants" asp-action="Details" asp-route-id="1" class="btn">Details</a>
            </div>
        </div>
    </div>
    <div class="col text-center">
        <div id="cards" class="card">
            <img src="~/Photos/korean-bbq-8064w.jpg" style="height: 300px" class="card-img-top" alt="...">
            <div class="card-body">
                <br />
                <h5 class="card-title">MEXIKANA</h5>
                <hr />
                <p class="card-text">Korean Mexican fusion for the hipsters.</p>
                <a asp-controller="Restaurants" asp-action="Details" asp-route-id="3" class="btn">Details</a>
            </div>
        </div>
    </div>
    <div class="col text-center">
        <div id="cards" class="card">
            <img src="~/Photos/assorted-brazilian-appetizers.jpg" class="card-img-top" style="height: 300px" alt="...">
