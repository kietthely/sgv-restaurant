@model SGVRestaurantProject.Models.BanquetAndMenuItem

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-5">

        <h1 style="margin-left: 90px;">Edit Banquet Item</h1>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BanquetAndMenuItemsId" />
            <div class="form-group">
                <label asp-for="ItemId" class="control-label">Item id</label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BanquetId" class="control-label">Banquet id</label>
                <select asp-for="BanquetId" class="form-control" asp-items="ViewBag.BanquetId" style="margin-bottom: 10px;"></select>
                <span asp-validation-for="BanquetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
                <a class="btn" asp-controller="BanquetAndMenuItems" asp-action="Index">Back to List</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
