@model SGVRestaurantProject.Models.BanquetAndMenuItem

@{
    ViewData["Title"] = "Create";
}

<h4>Add @ViewBag.menuItemName to a Banquet</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label">Item Name</label>
                <select asp-for="ItemId" class="form-control visually-hidden" asp-items="ViewBag.ItemId"></select>
                <text>@ViewBag.menuItemName</text>
            </div>
            <div class="form-group">
                <label asp-for="BanquetId" class="control-label">Banquet Name</label>
                <select asp-for="BanquetId" class ="form-control" asp-items="ViewBag.BanquetId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
