@model SGVRestaurantProject.Models.BanquetAndMenuItem

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 style="margin-left: 30px;">What banquet do you want to add this item to?</h1>
        <hr />

        <div class="col-4" style="margin-left: 260px;">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ItemId" class="control-label"></label>
                    <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="BanquetId" class="control-label"></label>
                    <select asp-for="BanquetId" class="form-control" asp-items="ViewBag.BanquetId" style="margin-bottom: 10px"></select>
                </div>
            </form>
        </div>
        <div class="form-group">
            <input class="btn" type="submit" value="Create" />
            <a class="btn" asp-controller="MenuItems" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
