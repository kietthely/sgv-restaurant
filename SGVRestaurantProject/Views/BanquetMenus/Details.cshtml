@model SGVRestaurantProject.Models.BanquetMenu

@{
    ViewData["Title"] = "Details";

}

<h1>Banquet Details</h1>

<div>
    @*<h4>BanquetMenu</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.BanquetName)*@
            Banquet Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BanquetName)
        </dd>
        <dt class="col-sm-2">
            Restaurant id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RestaurantId)
        </dd>
        
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.BanquetCost)*@
            Cost
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.BanquetCost)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.BanquetAvailability)*@
            Availability
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BanquetAvailability)
        </dd>
    </dl>
</div>


<div>
    <a class="btn btn-outline-primary" asp-controller="MenuItems" asp-action="Create" asp-route-id="@Model?.BanquetId">Add menu items</a> 
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.BanquetId">Edit details</a> 
    <a class="btn btn-outline-primary" asp-controller="BanquetAndMenuItems" asp-action="Index" asp-route-banquetId="@Model?.BanquetId">Edit Items</a> 
    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>
