@model SGVRestaurantProject.Models.BanquetMenu

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 style="margin-left: 35px;">Are you sure you want to delete this banquet?</h1>
        <hr />

        <div class="col-8" style="margin-left: 150px;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Banquet Name</th>
                        <th>Restaurant id</th>
                        <th>Cost</th>
                        <th>Avaliability</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.BanquetName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.RestaurantId)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.BanquetCost)
                        </td>
                        <td>
                            @if (Model.BanquetAvailability == true)
                            {
                                <p>Avaliable</p>
                            }
                            else
                            {
                                <p>Not currently avaliable</p>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="BanquetId" />
            <input type="submit" value="Delete" class="btn" />
            <a class="btn" asp-controller="BanquetMenus" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
