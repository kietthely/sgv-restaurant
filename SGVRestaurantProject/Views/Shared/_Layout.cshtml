                displayTier.innerHTML = `<a class="nav-link text-dark">${tier}</a>`;
                const tierNav = document.getElementById('tier');
                tierNav.appendChild(displayTier);
            })
            .catch(error => {
                console.error('Error:', error);
            });
    </script>*@
</body>
</html>
