@model SGVRestaurantProject.Models.ViewModel.RestaurantBookingsVM

@{
    ViewData["Title"] = "Restaurant Bookings";

    int count = 0;
}

<h1>@Model.theRestaurant.RestaurantName Bookings</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Sitting Id</th>
                <th scope="col">Sitting</th>
                <th scope="col">Sitting Times</th>
                <th scope="col">Booked by</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.restaurantBookings.Any())
            {
                @foreach (var booking in Model.restaurantBookings)
                {
                        count++;
                    
                    <tr>
                        <th scope="row">@count</th>
                        <td>@booking.SittingId</td>
                        <td>@booking.Sitting.SittingType</td>
                        <td>@booking.Sitting.SittingDuration</td>
                        <td>@booking.User.FirstName @booking.User.LastName</td>
                        <td>@booking.User.Email</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    @{
                        count++;
                    }
                    <th scope="row">@count</th>
                    <td>No data in model.</td>
                </tr>
            }


        </tbody>
    </table>
</div>

