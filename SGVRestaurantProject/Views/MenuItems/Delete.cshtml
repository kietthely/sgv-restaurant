@model SGVRestaurantProject.Models.MenuItem

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center">
    <div class="col-md-8">>
        <h1 style="margin-left: 110px;">Are you sure you want to delete this?</h1>
        <hr />

        <div class="col-4" style="margin-left: 230px;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.ItemName)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ItemId" />
            <input type="submit" value="Delete" class="btn" />
            <a class="btn" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>

