@model SGVRestaurantProject.Models.MenuItem

@{
    ViewData["Title"] = "Details";
}


<div class="row justify-content-center">
    <div class="col-md-5">
        <h1 style="margin-left: 150px;">Menu Item</h1>
        <hr />

        <div class="col-4" style="margin-left: 60px;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.ItemName)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <a class="btn" asp-action="Edit" asp-route-id="@Model?.ItemId">Edit</a>
            <a class="btn" asp-action="Index">Back to List</a>
        </div>

    </div>
</div>

